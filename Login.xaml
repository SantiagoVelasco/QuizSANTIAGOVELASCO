<Page x:Class="EventParadigmExample.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventParadigmExample"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="790"
      Title="Login">

    <Grid Background="#FF1ADEF1">
        <Label Content="LOGIN" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="218,119,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="220,181,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtUsername" HorizontalAlignment="Left" Margin="338,123,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox Name="txtPassword" HorizontalAlignment="Left" Margin="338,185,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnLogin" Content="Log in" HorizontalAlignment="Left" Margin="338,239,0,0" VerticalAlignment="Top" Height="18" Width="120" FontSize="11" FontFamily="Calibri" Click="btnLogin_Click"/>
    </Grid>
</Page>
